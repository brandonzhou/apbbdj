<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:contentPaddingBottom="15dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:cardElevation="0dp"
        app:contentPaddingTop="15dp">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/iv_item_bg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_point_green" />

            <ImageView
                android:id="@+id/iv_item_type"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="65dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="0dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="通知公告"
                    android:textColor="@color/grey_7"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="9:23"
                    android:textColor="@color/grey_7"
                    android:textSize="14sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="2019年公布《最新门店优惠政策"
                android:textColor="@color/grey_7"
                android:textSize="14sp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/item_iv_unread"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/shape_point_red"
        android:layout_width="8dp"
        android:layout_height="8dp" />


</RelativeLayout>