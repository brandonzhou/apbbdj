<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    tools:context=".community.activity.MailingdetailActivity">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/mainColor">

            <RelativeLayout
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_left" />

            </RelativeLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/whilte"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="订单号:"
                    android:textColor="@color/grey_7"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_yundan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="运单号:"
                    android:textColor="@color/grey_7"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_way_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="快递公司:"
                    android:textColor="@color/grey_7"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_express"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="下单时间:"
                    android:textColor="@color/grey_7"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="官网报价:"
                    android:textColor="@color/grey_7"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="19元"
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="订单详情"
                android:textColor="@color/grey_7"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:id="@+id/rl_ic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_circle_blue">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="寄"
                        android:textColor="@color/whilte"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rl_ic"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_title_send"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:gravity="center_vertical"
                        android:text="寄件人:" />

                    <TextView
                        android:id="@+id/tv_send_name"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_send"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_title_phone"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_title_send"
                        android:gravity="center_vertical"
                        android:text="寄件电话:" />

                    <TextView
                        android:id="@+id/tv_send_phone"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_send_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_phone"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_title_phone"
                        android:gravity="center_vertical"
                        android:text="寄件地址:" />


                    <TextView
                        android:id="@+id/tv_send_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_send_phone"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_phone"
                        android:gravity="center_vertical"
                        android:minHeight="23dp"
                        android:paddingRight="10dp"
                        android:text="" />


                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <RelativeLayout
                    android:id="@+id/rl_receive"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_circle_yellow">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="收"
                        android:textColor="@color/whilte"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rl_receive"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_title_receive"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:gravity="center_vertical"
                        android:text="收件人:" />

                    <TextView
                        android:id="@+id/tv_receive_name"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_receive"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_title_phone_"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_title_receive"
                        android:gravity="center_vertical"
                        android:text="收件电话:" />

                    <TextView
                        android:id="@+id/tv_receive_phone"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_receive_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_phone_"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_receive_"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_title_phone_"
                        android:gravity="center_vertical"
                        android:text="收件地址:" />


                    <TextView
                        android:id="@+id/tv_receive_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_receive_phone"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_receive_"
                        android:gravity="center_vertical"
                        android:minHeight="23dp"
                        android:paddingRight="10dp"
                        android:text="" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:id="@+id/rl_goods"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_circle_purple">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="物"
                        android:textColor="@color/whilte"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rl_goods"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_title_goods"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:gravity="center_vertical"
                        android:text="物品名称:" />

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_goods"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_title_goods_"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_title_goods"
                        android:gravity="center_vertical"
                        android:text="计费重量:" />

                    <TextView
                        android:id="@+id/tv_goods_weiht"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_goods_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_title_goods_"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_mark_title"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_title_goods_"
                        android:gravity="center_vertical"
                        android:text="备注:" />


                    <TextView
                        android:id="@+id/tv_goods_mark"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_below="@+id/tv_goods_weiht"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_mark_title"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <Button
                android:id="@+id/bt_first_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_toLeftOf="@+id/bt_immediately_seal"
                android:background="@drawable/bt_bg_1"
                android:text="原单重打"
                android:textColor="@color/whilte"
                android:textSize="13sp" />

            <Button
                android:id="@+id/bt_cannel_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/bt_immediately_seal"
                android:background="@drawable/bt_bg_1"
                android:text="取消订单"
                android:textColor="@color/whilte"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>