<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shap_ll_bg"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:background="@drawable/shap_ll_bg"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_logo"
            android:scaleType="fitCenter"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:textSize="15sp"
                    android:textColor="@color/grey_7"
                    android:text="顺丰打印纸"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_goods_state"
                    android:textSize="12sp"
                    android:textColor="@color/mainColor"
                    android:text="已处理"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/tv_goods_type"
                    android:textSize="13sp"
                    android:textColor="@color/grey_2"
                    android:text="中型号"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_tv_goods_number"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/mainColor"
                    android:text="×5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/grey_2"
                    android:text="合计 : "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_goods_money"
                    android:textSize="13sp"
                    android:textColor="@color/grey_2"
                    android:text="￥25.00"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/grey_2"
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <View
        android:background="@color/grey_6"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</LinearLayout>