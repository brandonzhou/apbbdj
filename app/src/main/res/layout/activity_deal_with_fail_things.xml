<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    tools:context="com.shshcom.station.storage.activity.DealWithFailThingsActivity">


    <include layout="@layout/toolbar" />

    <!--运单信息模块-->
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:src="@drawable/ic_eight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/al_root" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_module"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shap_white_bg_r10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--报错提示-->
        <TextView
            android:id="@+id/tv_fail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="报错提示"
            android:textColor="@color/color_text_fail"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_pickup_code_key"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <!--取件码-->
        <TextView
            android:id="@+id/tv_pickup_code_key"
            style="@style/Style_tv_dark_small"
            android:text="取件码"
            app:layout_constraintBottom_toTopOf="@id/tv_tracking_company_key"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_pickup_code_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/margin_right"
            android:text="A160001"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toTopOf="@id/tv_pickup_code_key"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pickup_code_key"
            app:layout_constraintLeft_toLeftOf="@id/barrier"
            app:layout_constraintRight_toRightOf="parent"/>
        <!--快递公司-->
        <TextView
            android:id="@+id/tv_tracking_company_key"
            style="@style/Style_tv_dark_small"
            android:text="快递公司"
            app:layout_constraintBottom_toTopOf="@id/tv_tracking_number_key"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_tracking_company_value"
            android:text="圆通快递"
            android:gravity="left|center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tracking_company_key"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_tracking_company_key"
            style="@style/Style_et_gray_small" />


        <!--快递单号-->
        <TextView
            android:id="@+id/tv_tracking_number_key"
            style="@style/Style_tv_dark_small"
            android:text="快递单号"
            app:layout_constraintBottom_toTopOf="@id/tv_phone_key"
            app:layout_constraintLeft_toLeftOf="parent" />


        <EditText
            android:id="@+id/et_tracking_number_value"
            android:text="YT6254526665466"
            android:singleLine="true"
            android:imeOptions="actionNext"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tracking_number_key"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_tracking_number_key"
            style="@style/Style_et_gray_small" />
        <!--手机号-->
        <TextView
            android:id="@+id/tv_phone_key"
            style="@style/Style_tv_dark_small"
            android:layout_marginBottom="20dp"
            android:text="手机号"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            app:layout_constraintLeft_toLeftOf="parent" />


        <EditText
            android:id="@+id/et_phone_value"
            android:text="15011113333"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:imeActionLabel="@string/save"
            app:layout_constraintBottom_toBottomOf="@+id/tv_phone_key"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_phone_key"
            style="@style/Style_et_gray_small" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="tv_phone_key,tv_tracking_number_key
            ,tv_tracking_company_key"

            />

        <Button
            android:id="@+id/btn_delete"
            style="@style/Style_btn_main_leary"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_littler"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="10dp"
            android:text="@string/delete_photo"
            app:layout_constraintBottom_toBottomOf="@id/btn_save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline" />

        <Button
            android:id="@+id/btn_save"
            style="@style/Style_btn_main_solid"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_littler"
            android:layout_marginStart="10dp"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="18dp"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
