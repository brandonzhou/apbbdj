<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    tools:context="com.shshcom.station.storage.activity.DealWithFailThingsActivity">


    <include layout="@layout/toolbar" />


    <!--运单信息模块-->
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:src="@drawable/ic_eight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/al_root" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="cl_module"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_module"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginBottom="20dp"

        android:background="@drawable/shap_white_bg_r10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--报错提示-->
        <TextView
            android:id="@+id/tv_fail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:paddingTop="18dp"
            android:text="报错提示"
            android:textColor="@color/color_text_fail"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_tracking_company_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <!--快递公司-->
        <TextView
            android:id="@+id/tv_tracking_company_key"
            style="@style/Style_tv_dark_small"
            android:text="快递公司"
            app:layout_constraintBottom_toTopOf="@id/tv_phone_key"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_tracking_company_value"
            android:text=""
            android:hint="请选择快递公司"
            android:gravity="left|center_vertical"

            app:layout_constraintBottom_toBottomOf="@+id/tv_tracking_company_key"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_tracking_company_key"
            style="@style/Style_et_gray_small" />





        <!--手机号-->
        <TextView
            android:id="@+id/tv_phone_key"
            style="@style/Style_tv_dark_small"
            android:layout_marginBottom="20dp"
            android:text="手机号"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            app:layout_constraintLeft_toLeftOf="parent" />


        <EditText
            android:id="@+id/et_phone_value"
            android:text=""
            android:hint="@string/input_addressee_phone"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="11"
            android:imeOptions="actionDone"
            android:imeActionLabel="@string/save"
            app:layout_constraintBottom_toBottomOf="@+id/tv_phone_key"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_phone_key"
            style="@style/Style_et_gray_small" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="tv_phone_key
            ,tv_tracking_company_key"

            />

        <Button
            android:id="@+id/btn_delete"
            style="@style/Style_btn_main_leary"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_littler"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="10dp"
            android:text="@string/delete_photo"
            app:layout_constraintBottom_toBottomOf="@id/btn_save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline" />

        <Button
            android:id="@+id/btn_save"
            style="@style/Style_btn_main_solid"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_littler"
            android:layout_marginStart="10dp"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="18dp"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/rl_express_info_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/al_root"
        android:paddingStart="30dp"
        android:paddingEnd="0dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/bg_mark_trans_r8"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/tv_pick_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            tools:text="取件码：2333"
            android:gravity="center"
            android:textSize="@dimen/text_size_main"
            android:textColor="@color/white"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_bar_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tv_pick_code"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            tools:text="快递单号：7238283772747737"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/white"
            android:visibility="visible"
            />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
