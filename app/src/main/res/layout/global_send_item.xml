<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/main_bg_send_search"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_deliver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/id_send_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="令狐冲"
                android:textColor="@color/grey_7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_send_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/id_send_person"
                android:text="18435151842"
                android:textColor="@color/grey_7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/tv_bg_green_2"
                android:text="已处理"
                android:textColor="@color/mainColor"
                android:textSize="13sp" />



            <TextView
                android:id="@+id/tv_send_person_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_send_person"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:text="详细地址"
                android:textColor="@color/grey_2"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收件人: "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_receive_person"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="马云"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="18:32"
            android:textColor="@color/grey_2"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:textSize="13sp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="地址: " />

        <TextView
            android:id="@+id/tv_receive_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="马云"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_function"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/bt_immediately_seal"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bt_bg_1"
            android:text="立即打印"
            android:textColor="@color/whilte"
            android:textSize="13sp" />

        <Button
            android:id="@+id/bt_first_save"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/bt_immediately_seal"
            android:background="@drawable/bt_bg_1"
            android:text="先存后打"
            android:textColor="@color/whilte"
            android:textSize="13sp" />

        <Button
            android:id="@+id/bt_cannel_order"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/bt_first_save"
            android:background="@drawable/bt_bg_2"
            android:text="取消订单"
            android:textColor="@color/grey_7"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>