<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_module"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_white_bg_r10"
    android:orientation="vertical">


    <!--报错提示-->
    <TextView
        android:id="@+id/tv_title_shelf_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:text="添加货架号"
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--快递公司-->


    <LinearLayout
        android:id="@+id/ll_shelf_context"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_48"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="@dimen/margin_left"
        android:background="@drawable/shape_bg_grey_5f_r5"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_shelf_name"
            style="@style/Style_tv_dark_small"
            android:layout_marginStart="@dimen/margin_left"
            android:text="货架号"
            android:textColor="@color/text_grey_3"
            android:textSize="@dimen/text_size_main" />

        <EditText
            android:id="@+id/et_shelf_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/margin_left"
            android:paddingEnd="@dimen/margin_left"
            android:layout_weight="1"
            android:maxLength="10"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="输入货架号"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/text_grey_3"
            android:textSize="@dimen/text_size_14"

            tools:text="" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24dp"
        android:background="@color/line_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_grey_6"
            android:textSize="@dimen/text_size_main" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_main" />

        <TextView
            android:id="@+id/tv_shelf_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_size_main" />


    </LinearLayout>


</LinearLayout>