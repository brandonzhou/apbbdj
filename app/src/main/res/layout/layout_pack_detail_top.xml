<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_pack_detail_top"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivCompany"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/_tvPackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="运单号："
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toEndOf="@+id/ivCompany"
        app:layout_constraintTop_toTopOf="@+id/ivCompany" />

    <TextView
        android:id="@+id/tvPackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_15"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@+id/_tvPackId"
        app:layout_constraintStart_toEndOf="@+id/_tvPackId"
        app:layout_constraintTop_toTopOf="@+id/_tvPackId"
        tools:text="ZT660845188539" />

    <TextView
        android:id="@+id/_tvPickCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="取件码："
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="@+id/_tvPackId"
        app:layout_constraintTop_toBottomOf="@+id/_tvPackId" />

    <TextView
        android:id="@+id/tvPickCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A2-12-34"
        android:textColor="@color/text_color_15"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@+id/_tvPickCode"
        app:layout_constraintStart_toEndOf="@+id/_tvPickCode"
        app:layout_constraintTop_toTopOf="@+id/_tvPickCode" />

    <TextView
        android:id="@+id/_tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="客户电话："
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="@+id/_tvPickCode"
        app:layout_constraintTop_toBottomOf="@+id/_tvPickCode" />

    <TextView
        android:id="@+id/tvPackPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@+id/_tvPhone"
        app:layout_constraintStart_toEndOf="@+id/_tvPhone"
        app:layout_constraintTop_toTopOf="@+id/_tvPhone"
        tools:text="菜鸟隐私号码" />

    <TextView
        android:id="@+id/tvPackState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPackId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPackId"
        tools:text="已出库"
        android:textColor="@color/text_grey_9"
        android:textSize="@dimen/text_size_14" />
</androidx.constraintlayout.widget.ConstraintLayout>