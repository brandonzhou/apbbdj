<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:id="@+id/layout_local_close"
        android:layout_weight="1"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whilte"
        android:orientation="vertical"
        android:paddingBottom="20dp">



        <RelativeLayout
            android:background="@color/whilte"
            android:id="@+id/iv_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right">

            <TextView
                android:gravity="center"
                android:text="A1"
                android:id="@+id/tv_local"
                android:textColor="@color/black_2"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="取件码"
            android:textColor="@color/grey_7"
            android:textSize="14dp" />

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/tv_pop_code_title"
                android:text=""
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:clickable="false"
                android:textColor="@color/grey_7"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/tv_pop_code"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:clickable="false"
                android:background="@null"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="请输入取件码"
                android:textColor="@color/grey_7"
                android:textSize="16dp" />
        </LinearLayout>


        <View
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/splite_view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="选择货架"
            android:textColor="@color/grey_7"
            android:textSize="14dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whilte"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="选择格子"
            android:textColor="@color/grey_7"
            android:textSize="14dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whilte"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_local_cannel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:background="@drawable/shape_border_green"
                android:text="取消"
                android:textColor="@color/mainColor"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_local_save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:gravity="center"
                android:background="@drawable/shap_solid_green_circle"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
