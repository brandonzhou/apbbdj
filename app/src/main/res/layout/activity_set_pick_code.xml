<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    tools:context="com.shshcom.station.storage.activity.SetPickCodeActivity">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_araw_left_grey" />
        </RelativeLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="设置取件码"
            android:textColor="@color/grey_7"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_46"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_left_right"
        android:text="选择编号规则"
        android:textColor="@color/text_grey_6"
        android:textSize="@dimen/text_size_14" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_main"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cl_start_number_preview"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tv_rule_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:text="货架号+日期+单号编号"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Style_tv_main" />


        <ImageView
            android:id="@+id/iv_set_type"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/margin_left_right"
            android:layout_height="0dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_more" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/ll_shelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_46"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_tv_shelf_manage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="@dimen/margin_left_right"
                android:text="选择货架号"
                android:textColor="@color/text_grey_6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_shelf_manage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="@dimen/margin_left_right"
                android:paddingStart="@dimen/margin_left_right"
                android:text="管理"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_size_14" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_shelf_add"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingEnd="@dimen/margin_left_right"
                android:paddingStart="10dp"
                android:text="添加"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:textColor="@color/text_grey_6"
                android:textSize="@dimen/text_size_main" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_shelf_add" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_start_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_46"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_left_right"
            android:text="编号开始数字"
            android:textColor="@color/text_grey_6"
            android:textSize="@dimen/text_size_14" />


        <EditText
            android:id="@+id/et_start_number_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_main"
            android:paddingStart="@dimen/margin_left"
            android:paddingEnd="@dimen/margin_right"
            android:background="@color/white"
            android:inputType="number"
            android:maxLength="6"
            style="@style/Style_tv_main"
            android:text=""
            android:hint="请输入开始编号"
            app:layout_constraintLeft_toRightOf="@+id/tv_set_start_number_key"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@+id/cl_start_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Style_btn_main_solid" />


</LinearLayout>