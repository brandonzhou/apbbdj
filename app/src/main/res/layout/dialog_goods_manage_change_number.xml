<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_close_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_close"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_delete_1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title_goods_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_main"
                tools:text="增加库存" />

            <RelativeLayout
                android:id="@+id/rl_submit"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="40dp">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_confirm_1" />
            </RelativeLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/_tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="当前库存："
                android:textSize="@dimen/text_size_main"
                android:textColor="@color/text_main"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234件"
                android:textSize="@dimen/text_size_main"
                android:textColor="@color/text_main"
                app:layout_constraintBottom_toBottomOf="@+id/_tv_goods_num"
                app:layout_constraintStart_toEndOf="@+id/_tv_goods_num"
                app:layout_constraintTop_toTopOf="@+id/_tv_goods_num" />


            <EditText
                android:id="@+id/et_goods_num"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shap_et_bg"
                android:gravity="center_vertical"
                android:hint="请输入添加的库存数量"
                android:textSize="@dimen/text_size_main"
                android:textColor="@color/text_main"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/_tv_goods_num"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_goods_num_reduce_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:text="减少的库存不能高于当前的库存"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_size_main" />


    </LinearLayout>


</LinearLayout>
