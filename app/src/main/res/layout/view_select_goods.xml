<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_left_close"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:id="@+id/tv_k_n"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <Button
        android:textSize="@dimen/standardtitleSize"
        android:id="@+id/bt_take_by_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:text="普通添加"></Button>

    <View
        android:id="@+id/tk_num"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <Button
        android:id="@+id/bt_take_by_scan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:text="扫描条形码添加"
        android:textSize="@dimen/standardtitleSize"></Button>

    <View
        android:id="@+id/tv_k_num"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <View
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <View
        android:id="@+id/tv_k_m"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <Button
        android:textSize="@dimen/standardtitleSize"
        android:id="@+id/bt_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="取消"></Button>
</LinearLayout>
