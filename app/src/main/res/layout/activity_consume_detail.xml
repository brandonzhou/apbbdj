<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".community.activity.ConsumeDetailActivity">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_left" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/whilte"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="订单详情"
            android:textColor="@color/grey_7"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="收         支" />

            <TextView
                android:id="@+id/tv_shouzhi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/grey_7" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="订单号：" />

            <TextView
                android:id="@+id/tv_dingdan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/grey_7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="运单号：" />


            <TextView
                android:id="@+id/tv_yundan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/grey_7" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:id="@+id/rl_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_circle_blue">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="寄"
                    android:textColor="@color/whilte"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/rl_ic"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title_send"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:text="寄件人:" />

                <TextView
                    android:id="@+id/tv_send_name"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_send"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_title_phone"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_title_send"
                    android:gravity="center_vertical"
                    android:text="寄件电话:" />

                <TextView
                    android:id="@+id/tv_send_phone"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_send_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_phone"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_title_phone"
                    android:gravity="center_vertical"
                    android:text="寄件地址:" />


                <TextView
                    android:id="@+id/tv_send_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_send_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_phone"
                    android:gravity="center_vertical"
                    android:minHeight="23dp"
                    android:paddingRight="10dp"
                    android:text="" />


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <RelativeLayout
                android:id="@+id/rl_receive"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_circle_yellow">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="收"
                    android:textColor="@color/whilte"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/rl_receive"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title_receive"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:text="收件人:" />

                <TextView
                    android:id="@+id/tv_receive_name"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_receive"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_title_phone_"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_title_receive"
                    android:gravity="center_vertical"
                    android:text="收件电话:" />

                <TextView
                    android:id="@+id/tv_receive_phone"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_receive_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_phone_"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_receive_"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_title_phone_"
                    android:gravity="center_vertical"
                    android:text="收件地址:" />


                <TextView
                    android:id="@+id/tv_receive_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_receive_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_receive_"
                    android:gravity="center_vertical"
                    android:minHeight="23dp"
                    android:paddingRight="10dp"
                    android:text="" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:id="@+id/rl_goods"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_circle_purple">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="物"
                    android:textColor="@color/whilte"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/rl_goods"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title_goods"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:text="物品名称:" />

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_goods"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_title_goods_"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_title_goods"
                    android:gravity="center_vertical"
                    android:text="物品重量:" />

                <TextView
                    android:id="@+id/tv_goods_weiht"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_goods_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_title_goods_"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_mark_title"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_title_goods_"
                    android:gravity="center_vertical"
                    android:text="备注:" />


                <TextView
                    android:id="@+id/tv_goods_mark"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_below="@+id/tv_goods_weiht"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_mark_title"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="客户姓名"
                android:textColor="@color/grey_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/grey_10"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FDFCFC" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户住址"
                android:textColor="@color/grey_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="马家堡小区13号楼3单元"
                android:textColor="@color/grey_10"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户电话"
                android:textColor="@color/grey_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="18435151842"
                android:textColor="@color/grey_10"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="订单号码"
                android:textColor="@color/grey_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="3334 2332 4443 5543"
                android:textColor="@color/grey_10"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="下单时间"
                android:textColor="@color/grey_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2019-02-21 19:30"
                android:textColor="@color/grey_10"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="#FDFCFC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="订单明细"
            android:textColor="@color/grey_10"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FDFCFC" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_product"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="20dp">


        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>
