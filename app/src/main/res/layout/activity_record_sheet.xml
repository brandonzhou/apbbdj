<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical"
    tools:context=".community.activity.RecordSheetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mainColor">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_left" />

        </RelativeLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="录单揽件"
            android:textColor="@color/whilte"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="物品名称: "
            android:textColor="@color/grey_7"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_goods_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="最多写15个字"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey_2"
            android:textColorHint="@color/grey_2"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="重量: "
            android:textColor="@color/grey_7"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_goods_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:hint="请填写重量"
            android:textColor="@color/grey_2"
            android:textColorHint="@color/grey_2"
            android:textSize="13sp" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="kg"
            android:textColor="@color/grey_7"
            android:textSize="13sp" />

        <View
            android:background="@color/grey_6"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="运费: "
            android:paddingLeft="10dp"
            android:textColor="@color/grey_7"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_goods_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写运费"
            android:inputType="number"
            android:textColor="@color/grey_2"
            android:textColorHint="@color/grey_2"
            android:textSize="13sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="¥"
            android:textColor="@color/grey_7"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="付款方式: "
            android:textColor="@color/grey_7"
            android:textSize="13sp" />

        <RadioGroup
            android:id="@+id/rg_payfor_type"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <RadioButton
                android:id="@+id/rb_payfor_now"
                android:button="@null"
                android:background="@drawable/rb_bg"
                android:text="现付"
                android:textSize="13sp"
                android:gravity="center"
                android:checked="true"
                android:textColor="@color/rb_tv_select"
                android:layout_width="70dp"
                android:layout_height="30dp" />

            <RadioButton
                android:id="@+id/rb_payfor_by_month"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:textSize="13sp"
                android:textColor="@color/rb_tv_select"
                android:gravity="center"
                android:background="@drawable/rb_bg"
                android:text="月结"
                android:layout_width="70dp"
                android:layout_height="30dp" />

        </RadioGroup>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="备注: "
            android:textColor="@color/grey_7"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_mark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写备注"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey_2"
            android:textColorHint="@color/grey_2"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/bt_commit_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_bg_8"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>