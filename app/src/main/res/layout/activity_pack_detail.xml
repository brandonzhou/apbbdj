<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_6"
    android:orientation="vertical"
    tools:context="com.shshcom.station.statistics.ui.PackDetailActivity">

    <include layout="@layout/toolbar" />

    <include layout="@layout/layout_pack_detail_top" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="13dp">

        <View
            android:id="@+id/_view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/color_main_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_modify_phone"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_bg_line_cc"
            android:drawableLeft="@drawable/icon_pack_detail_edit"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"

            android:text="修改电话"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toStartOf="@+id/tv_resend_sms"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/_view_line" />

        <TextView
            android:id="@+id/tv_resend_sms"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/icon_pack_detail_sms"
            android:drawablePadding="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/shape_bg_line_cc"

            android:text="重发短信"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/_view_line" />

        <TextView
            android:id="@+id/tv_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_bg_line_cc"
            android:drawableLeft="@drawable/icon_pack_detail_call_phone"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"

            android:text="拨打电话"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_resend_sms"
            app:layout_constraintTop_toBottomOf="@id/_view_line" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_do_pack_out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal"
        >
        
        <TextView
            android:id="@+id/tv_btn_pack_out_error"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_main"
            android:background="@drawable/shape_btn_white_r20"
            android:text="异常出库"
            android:textColor="@color/text_main"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_btn_pack_out"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_btn_green_r20"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/text_size_main"
            android:text="出库"
            android:textColor="@color/white"
            android:gravity="center"
            />


    </LinearLayout>


</LinearLayout>


