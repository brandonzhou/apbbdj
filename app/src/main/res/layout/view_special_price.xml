<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_left_close"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15dp"
            android:text="设置特价商品"
            android:gravity="center"
            android:textColor="@color/grey_7"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/iv_special_goods_image"
                android:scaleType="fitCenter"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_special_goods_name"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:text="商品名称"
                    android:textColor="@color/grey_7"
                    android:paddingRight="10dp"
                    android:minHeight="30dp"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_special_goods_price"
                    android:textColor="@color/mainColor"
                    android:textSize="13dp"
                    android:text="价格"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_7"
            android:textSize="13dp"
            android:text="促销价格"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shap_et_bg"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18dp"
                android:text="￥"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/et_special_promotion_price"
                android:textColor="@color/grey_7"
                android:textSize="13dp"
                android:hint="填写促销价格"
                android:gravity="center_vertical"
                android:background="@null"
                android:inputType="number|numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_7"
            android:textSize="13dp"
            android:text="每天什么时间段特价"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <LinearLayout
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@color/mainColor" />

            <TextView
                android:id="@+id/tv_special_start_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="开始时间"
                android:gravity="center"
                android:textColorHint="@color/grey_3"
                android:textSize="14dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:text="至"
                android:textColorHint="@color/grey_3"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_special_end_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:hint="结束时间"
                android:textColorHint="@color/grey_3"
                android:textSize="14dp" />
        </LinearLayout>


        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_7"
            android:textSize="13dp"
            android:text="销售多少件之后，恢复原价？"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_special_promotion_number"
                android:textColor="@color/grey_7"
                android:textSize="13dp"
                android:hint="填上促销件数"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shap_et_bg"
                android:inputType="number|numberDecimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:textColor="@color/grey_7"
                android:textSize="13dp"
                android:text="个/件"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_special_add_confirm"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:gravity="center"
            android:background="@drawable/shap_solid_green_circle"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="15sp" />




    </LinearLayout>


</LinearLayout>
