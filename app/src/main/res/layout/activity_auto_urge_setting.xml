<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_main_bg"
    tools:context="com.shshcom.station.setting.ui.activity.AutoUrgeSettingActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_araw_left_grey" />

        </RelativeLayout>


        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="自动催取"
            android:textColor="@color/grey_7"
            android:textSize="18dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_urge_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_54"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_top_10"
        android:paddingStart="@dimen/margin_15"
        android:paddingEnd="@dimen/margin_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="催取设置"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_main"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_urge_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="入库后3天内未取走的包裹"
            tools:text="入库后3天内未取走的包裹"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_main"
            android:layout_gravity="center_vertical" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_urge_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_54"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_top_10"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信发送时间"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_main"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="上午 09:00"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_main"
                android:layout_gravity="center_vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_top_10"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="催取短信内容预览"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_main"
                android:layout_gravity="center_vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_main_line" />


            <TextView
                android:id="@+id/tv_sms_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的包裹放在驿站名称已经超过3天，请尽快来取，取件码：取件码，联系电话：联系电话"
                tools:text="您的包裹放在驿站名称已经超过3天，请尽快来取，取件码：取件码，联系电话：联系电话"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_main"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注：每个快件只催取一次。请保证钱包余额充足，否则可能催取失败。"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_grey_9"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15" />

    </LinearLayout>


</LinearLayout>