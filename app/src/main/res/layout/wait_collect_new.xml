<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/main_bg_send_search_1"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_express"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="快递公司"
            android:textColor="@color/grey_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/grey_2"
            android:text=""
            android:textSize="15dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50f4f4f4" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="省市"
                android:textColor="@color/grey_7"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_send_person"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_send_phone"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="寄往"
                android:textColor="@color/grey_7"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_direction" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_receive_address"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical|right"
                android:text="省市"
                android:textStyle="bold"
                android:textColor="@color/grey_7"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_receive_person"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_receive_phone"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#50f4f4f4" />

    <TextView
        android:id="@+id/tv_print_now"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="立即打印"
        android:textColor="@color/mainColor"
        android:textSize="14dp" />

</LinearLayout>