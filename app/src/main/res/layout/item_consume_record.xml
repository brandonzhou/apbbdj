<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/item_consume_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="面单充值"
                android:textColor="@color/grey_7"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_consume_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/mainColor"
                android:text="-1200元"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:paddingLeft="15dp">

            <TextView
                android:visibility="invisible"
                android:id="@+id/item_consume_overplus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/grey_7"
                android:text="余额: 4500元"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_consume_time"
                android:textColor="@color/grey_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2018-12-18"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_araw_right_gray"
        android:scaleType="centerInside"
        android:layout_width="15dp"
        android:layout_height="10dp" />



</LinearLayout>