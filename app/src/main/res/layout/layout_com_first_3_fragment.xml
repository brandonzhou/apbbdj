<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whilte"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_scan_out_package"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_scan_out_package"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            tools:text = "出库"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/main_bg_first_search_3"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:padding="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_main_search" />

            <TextView
                android:id="@+id/textview_serach"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="手机号/运单号"
                android:paddingLeft="5dp"
                android:text=""
                android:textColorHint="@color/grey_1"
                android:textSize="@dimen/standardTextSize" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_today"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_bg_main_package_storage">




                <TextView
                    android:id="@+id/tv_today_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="19dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_bigger"
                    app:layout_constraintBottom_toTopOf="@+id/_tv_today_out"
                    app:layout_constraintEnd_toEndOf="@+id/_tv_today_out"
                    app:layout_constraintStart_toStartOf="@+id/_tv_today_out"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0" />

                <TextView
                    android:id="@+id/tv_today_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="19dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_bigger"
                    app:layout_constraintBottom_toTopOf="@+id/_tv_today_in"
                    app:layout_constraintEnd_toEndOf="@+id/_tv_today_in"
                    app:layout_constraintStart_toStartOf="@+id/_tv_today_in"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="99999" />

                <TextView
                    android:id="@+id/tv_storage_all_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="19dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_bigger"
                    app:layout_constraintBottom_toTopOf="@+id/_tv_storage_all_number"
                    app:layout_constraintEnd_toEndOf="@+id/_tv_storage_all_number"
                    app:layout_constraintStart_toStartOf="@+id/_tv_storage_all_number"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0" />

                <TextView
                    android:id="@+id/_tv_today_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="34dp"
                    android:text="今日入库"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/_tv_today_out"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/_tv_today_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="34dp"
                    android:text="今日出库"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/_tv_storage_all_number"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/_tv_today_in" />

                <TextView
                    android:id="@+id/_tv_storage_all_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="34dp"
                    android:text="总库存"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/_tv_today_out" />

                <View
                    android:id="@+id/view_today_out"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_today_out"
                    app:layout_constraintBottom_toBottomOf="@id/_tv_today_out"
                    app:layout_constraintStart_toStartOf="@+id/cl_today"
                    app:layout_constraintEnd_toEndOf="@+id/cl_today"
                    />

                <View
                    android:id="@+id/view_today_in"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintBottom_toBottomOf="@id/_tv_today_out"
                    app:layout_constraintTop_toTopOf="@id/tv_today_out"
                    app:layout_constraintStart_toStartOf="@+id/cl_today"
                    />

                <View
                    android:id="@+id/view_storage_all_number"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintBottom_toBottomOf="@id/_tv_today_out"
                    app:layout_constraintTop_toTopOf="@id/tv_today_out"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rl_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/grey_10_">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_title_handing"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shap_solid_corner_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_handle_ing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shap_solid_corner_red"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_notify_" />

                <TextView
                    android:id="@+id/tv_handle_failure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="入库失败，请立刻处理"
                    android:textColor="#FF2021"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="外卖服务"
                android:textColor="@color/grey_7"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.mt.bbdj.baseconfig.view.MyGridView
                android:id="@+id/gv_com_zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:horizontalSpacing="10dip"
                android:listSelector="@null"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dip">

            </com.mt.bbdj.baseconfig.view.MyGridView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="寄快递"
                android:textColor="@color/grey_7"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.mt.bbdj.baseconfig.view.MyGridView
                android:id="@+id/gv_com_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:horizontalSpacing="10dip"
                android:listSelector="@null"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dip">

            </com.mt.bbdj.baseconfig.view.MyGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="存快递"
                android:textColor="@color/grey_7"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.mt.bbdj.baseconfig.view.MyGridView
                android:id="@+id/gv_com_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:horizontalSpacing="10dip"
                android:listSelector="@null"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dip">

            </com.mt.bbdj.baseconfig.view.MyGridView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="其他"
                android:textColor="@color/grey_7"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.mt.bbdj.baseconfig.view.MyGridView
                android:id="@+id/gv_com_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:horizontalSpacing="10dip"
                android:listSelector="@null"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dip">

            </com.mt.bbdj.baseconfig.view.MyGridView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>