<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">
    
    <View
        android:id="@+id/layout_left_close"
        android:layout_weight="1"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_6_"
        android:orientation="vertical"
        android:paddingBottom="20dp">



        <RelativeLayout
            android:background="@color/whilte"
            android:id="@+id/iv_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right">

            <TextView
                android:gravity="center"
                android:text="编辑入库信息"
                android:textColor="@color/grey_7"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="取件码"
            android:textColor="@color/grey_7"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_pop_code"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="292381"
            android:textColor="@color/grey_7"
            android:textSize="16dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="运单号"
            android:textColor="@color/grey_7"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/tv_pop_way_number"
            android:hint="输入运单号"
            android:background="@null"
            android:textColor="@color/grey_7"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/splite_view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/grey_7"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/tv_pop_phone"
            android:hint="输入手机号"
            android:background="@null"
            android:textColor="@color/grey_7"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/splite_view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_pop_cannel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:background="@drawable/shape_border_green"
                android:text="取消"
                android:textColor="@color/mainColor"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_pop_save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:gravity="center"
                android:background="@drawable/shap_solid_green_circle"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
