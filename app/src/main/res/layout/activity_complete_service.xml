<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_6"
    android:orientation="vertical"
    tools:context=".community.activity.SendBymeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_araw_left_grey" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textview_serach"
            android:gravity="center"
            android:text="服务完成"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_one"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="150dp"
            android:layout_height="40dp"
            android:text="感谢您的服务"
            android:textColor="@color/grey_7"
            android:textSize="22sp" />

        <TextView
            android:layout_below="@+id/tv_one"
            android:id="@+id/tv_two"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:text="本单收入已放入您的钱包"
            android:textColor="#ff909090"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_below="@+id/tv_two"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="-5dp"
            android:text="请在“我”-“余额”中查看"
            android:textColor="#ff909090"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_below="@+id/tv_three"
            android:id="@+id/tv_finish"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/bt_bg"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="回首页"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>