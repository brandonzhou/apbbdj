<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:id="@+id/item_message_layout"
    android:background="@drawable/item_bg_check_false"
    android:gravity="center"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/item_message_number"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/grey_1"
        android:text="200条"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/item_message_money"
        android:layout_below="@+id/item_message_number"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/grey_1"
        android:text="售价:  6元"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_check_ic"
        android:scaleType="centerInside"
        android:background="@drawable/ic_item_check_true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>