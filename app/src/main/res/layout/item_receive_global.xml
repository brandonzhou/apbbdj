<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".community.activity.RepertoryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_bg_send_search"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="运 单  号:"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_wail_number"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="733458943123123"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/tv_bg_green_2"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:paddingRight="5dp"
                android:paddingBottom="1dp"
                android:text="已入库"
                android:textColor="@color/mainColor"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/ic_zhongtong_test"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="快递公司:"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_express_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="中通快递"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="手机号码:"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_tag_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提 货  码:"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_tag_number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="160215"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="操作记录:"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_enter_time"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2019-03-13 10:08:39"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="入库时间"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_out_layout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_out_time"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2019-03-13 10:08:39"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="出库时间"
                android:textColor="@color/grey_7"
                android:textSize="14dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_function"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/bt_out_exception"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/bt_out"
                android:background="@drawable/bt_bg_1"
                android:text="异常出库"
                android:textColor="@color/whilte"
                android:textSize="13dp" />


            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/bt_out"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_bg_1"
                android:text="出库"
                android:textColor="@color/whilte"
                android:textSize="13dp" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>