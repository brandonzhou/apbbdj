<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_6"
    android:orientation="vertical"
    tools:context=".community.activity.goodmanage.GoodsManagerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_araw_left_grey" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_cannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textview_serach"
            android:gravity="center"
            android:text="商品管理"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:background="@color/white"
                android:gravity="center"
                android:id="@+id/bt_add_goods_sherver"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="+添加货架"
                android:textColor="@color/grey_7"
                android:textSize="13dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_goods_type"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/white">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginRight="15dp"
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_manager_shelver"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="重命名"
                    android:textColor="@color/grey_7"
                    android:textSize="14dp" />

                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_rename" />


                <TextView
                    android:id="@+id/tv_manager_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="删除此货架"
                    android:textColor="@color/grey_7"
                    android:textSize="14dp" />

                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_delete_8" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_add_goods_bottom"
                android:layout_below="@+id/ll_title"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_no_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity=""
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="暂无商品"
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_no_goods"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="请为【XXX】货架添加商品"
                    android:textColor="@color/grey_2"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_goods_bottom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_add_scan"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shap_solid_grey_circle_"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:clickable="false"
                        android:src="@drawable/ic_add_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:gravity="center_vertical"
                        android:text="手动添加"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_goods"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shap_solid_green_circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:clickable="false"
                        android:src="@drawable/ic_add_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:gravity="center_vertical"
                        android:text="商品库选择"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>