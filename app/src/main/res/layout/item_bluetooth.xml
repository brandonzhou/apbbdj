<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shap_solid_grey_circle_4"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_bluetooth_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="HM-A300-F80E"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/item_bluetooth_print"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_solid_green_right_circle"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="打印面单"
        android:textColor="@color/whilte"
        android:textSize="15dp" />

</LinearLayout>