<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_white_bg_r10"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pack_none"
        android:layout_width="match_parent"
        android:layout_height="180dp">


        <TextView
            android:id="@+id/_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="查无此快递单号，请核实" />

        <TextView
            android:id="@+id/tv_pack_close"
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/shape_btn_green_r20"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_textView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pack_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="快递信息"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pack_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_grey_6"
            android:textSize="@dimen/text_size_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_text_title"
            tools:text="圆通快递：" />

        <TextView
            android:id="@+id/tv_pack_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0B0C00"
            android:textSize="@dimen/text_size_main"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pack_company_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_pack_company_name"
            app:layout_constraintTop_toTopOf="@+id/tv_pack_company_name"
            tools:text="TextView" />

        <TextView
            android:id="@+id/_tv_pack_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收件电话："
            android:textColor="@color/text_grey_6"
            android:textSize="@dimen/text_size_main"
            app:layout_constraintStart_toStartOf="@+id/tv_pack_company_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_pack_company_name" />

        <TextView
            android:id="@+id/tv_pack_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF0B0C00"
            android:textSize="@dimen/text_size_main"
            app:layout_constraintBottom_toBottomOf="@+id/_tv_pack_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/_tv_pack_phone"
            app:layout_constraintTop_toTopOf="@+id/_tv_pack_phone" />

        <TextView
            android:id="@+id/_tv_pack_pickcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="取件码："
            android:textColor="@color/text_grey_6"
            android:textSize="@dimen/text_size_main"
            app:layout_constraintStart_toStartOf="@+id/_tv_pack_phone"
            app:layout_constraintTop_toBottomOf="@+id/_tv_pack_phone" />

        <TextView
            android:id="@+id/tv_pack_pickcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0B0C00"
            android:textSize="@dimen/text_size_main"
            app:layout_constraintBottom_toBottomOf="@+id/_tv_pack_pickcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/_tv_pack_pickcode"
            app:layout_constraintTop_toTopOf="@+id/_tv_pack_pickcode"
            tools:text="137723" />


        <LinearLayout
            android:id="@+id/_ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/_tv_pack_pickcode">


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_green"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_green"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_green_r20"
                android:gravity="center"
                android:text="确认出库"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>