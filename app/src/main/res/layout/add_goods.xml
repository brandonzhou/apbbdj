<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_left_close"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:id="@+id/iv_delete"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="40dp">


            <ImageView
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:src="@drawable/ic_delete_1"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/iv_goods_image"
                android:scaleType="fitCenter"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_goods_name"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:text="商品名称"
                    android:textColor="@color/grey_7"
                    android:paddingRight="10dp"
                    android:minHeight="30dp"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_7"
            android:textSize="13dp"
            android:text="设置售卖价格"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/rl_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            zhy:max_select="1"/>
    
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shap_et_bg"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18dp"
                android:text="￥"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            
            <EditText
                android:id="@+id/et_price_self"
                android:textColor="@color/grey_7"
                android:textSize="13dp"
                android:hint="填写自定义价格"
                android:gravity="center_vertical"
                android:background="@null"
                android:inputType="number|numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_confirm"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:gravity="center"
            android:background="@drawable/shap_solid_green_circle"
            android:text="确认添加"
            android:textColor="@color/white"
            android:textSize="15sp" />




    </LinearLayout>


</LinearLayout>
