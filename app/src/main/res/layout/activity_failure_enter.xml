<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.youth.banner.Banner
        android:visibility="gone"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:is_auto_play="false" />


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:background="@drawable/shape_circle_white_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <Button
        android:visibility="gone"
        android:id="@+id/bt_take_camera"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="250dp"
        android:text="重新拍照"
        android:background="@drawable/shap_select_white"
        android:layout_width="100dp"
        android:textSize="13dp"
        android:layout_gravity="bottom"
        android:layout_height="40dp"/>


    <LinearLayout
        android:id="@+id/ll_change_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_circle_white"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="取件码"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_solid_circle_white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="运单号"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_way_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_solid_circle_white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_solid_circle_white"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/bt_delete"
                android:text="跳过，稍后重拍"
                android:background="@drawable/shap_select_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="13dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/bt_confirm"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                android:text="确认修改"
                android:textSize="13dp"
                android:background="@drawable/shap_press_effect"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_back_3"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</FrameLayout>