<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarStyle">@style/MainTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/grey_1</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 对话框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 弹出框动画 由下至上 -->
   <!-- <style name="dialogstyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        &lt;!&ndash; 进入时的动画 &ndash;&gt;
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
        &lt;!&ndash; 退出时的动画 &ndash;&gt;
    </style>-->

    <!-- 对话框样式 -->
    <style name="myDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.new" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/translucentbackground</item>
        <!--<item name="colorAccent">@color/translucentbackground</item>-->
        <item name="actionBarStyle">@style/MyActionBar</item> <!--字体大小-->
        <item name="actionBarSize">42dp</item><!-- 设置ActionBar的高度 -->
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TickerTextAppearanceCodeTool">
        <item name="android:textColor">#f0f0f0</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="theme_tv_base">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_13</item>
    </style>
    <style name="theme_splite_view">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/splite_view</item>
    </style>

    <style name="theme_et_base">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_13</item>
    </style>

    <style name="transparent_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- pupupwindow的弹出和消失动画 -->
    <style name="popup_window_anim">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <style name="durban_PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="durban_MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EasyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="durban_Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleTextColor">@color/durban_White</item>
        <item name="subtitleTextColor">@color/durban_White</item>
        <item name="theme">@style/durban_ToolbarTheme</item>
    </style>

    <style name="durban_ToolbarTheme">
        <item name="actionMenuTextColor">@color/durban_White</item>
    </style>

    <style name="durban_Toolbar.PopupTheme">
        <item name="popupTheme">@style/durban_PopupOverlay</item>
    </style>


    <style name="durban_MatchParent.WidthWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="durban_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="durban_WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="durban_WrapContent.WidthWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="durban_WrapContent.WidthWeight.ControllerTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/durban_White</item>
    </style>

    <style name="durban_MatchParent.ItemRoot">
        <item name="android:layout_height">@dimen/durban_dp_70</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="durban_MatchParent.WidthWeight.ControllerItem">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="durban_WrapContent.ControllerButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <style name="HKDialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="messageDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="myedit" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
    </style>

    <style name="Style_tv_main">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="Style_btn_main">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:background">@drawable/shap_btn_bg_main</item>
    </style>

    <style name="Style_tv_little_gray">
        <item name="android:textSize">@dimen/text_size_little</item>
        <item name="android:textColor">@color/color_text_primary_dark_black</item>
    </style>

    <style name="Style_tv_gravity_center">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>


</resources>
